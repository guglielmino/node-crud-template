{
  "name": "crud-template",
  "version": "1.0.0",
  "description": "Simple node js TypeScript CRUD service template",
  "repository": {
    "url": "https://github.com/guglielmino/node-crud-template"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "tsc": "tsc",
    "build": "npm run clean && tsc && npm run swagger",
    "start": "ts-node -r dotenv/config src/index.ts",
    "clean": "rimraf dist",
    "test": "NODE_ENV=test && mocha --exit",
    "test:coverage": "nyc npm run test",
    "swagger": "swaggerGen -c ./swagger.config.yml",
    "lint": "eslint --ext .ts,.tsx src"
  },
  "author": "Fabrizio Guglielmino <guglielmino@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/schema": "^8.2.0",
    "apollo-server-express": "^3.3.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.6.0",
    "graphql-tools": "^8.2.0",
    "joi": "^17.4.2",
    "mongodb": "^4.1.2",
    "mongoose": "^6.0.7",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.37",
    "typescript-ioc": "^3.2.2",
    "typescript-rest": "^3.0.4",
    "typescript-rest-ioc": "^1.0.1",
    "typescript-rest-swagger": "^1.1.7"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/joi": "^17.2.3",
    "@types/mocha": "^9.0.0",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/mysql": "^2.15.19",
    "@types/node": "^16.9.6",
    "@types/passport-jwt": "^3.0.6",
    "@types/validator": "^13.6.3",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-no-loops": "^0.3.0",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "ts-node": "^10.2.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.3"
  }
}
